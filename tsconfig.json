{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "noImplicitAny": false,
        "sourceMap": true,
        "rootDir": "src",
        "outDir": "./dist/js",
        "moduleResolution": "node",
        "jsx": "react",
        "noEmitOnError": true,
        "typeRoots": [
            "node_modules/@types"
        ]
    },
    "exclude": [
        "node_modules",
        "**/*.test.ts",
        "**/*.spec.ts"
    ]
}